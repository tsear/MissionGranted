{
  "name": "missiongranted-theme",
  "version": "1.0.0",
  "description": "Mission Granted WordPress Theme - SaaS Grant Management Platform",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss/main.scss:style.css --style compressed --no-source-map",
    "build:js": "rollup -c",
    "watch:css": "sass assets/scss/main.scss:style.css --watch --style expanded --source-map",
    "watch:js": "rollup -c -w",
    "sass": "sass assets/scss/main.scss:style.css --style compressed --no-source-map",
    "sass:watch": "sass assets/scss/main.scss:style.css --watch --style expanded --source-map",
    "sass:dev": "sass assets/scss/main.scss:style.css --style expanded --source-map",
    "preview": "vite preview"
  },
  "keywords": [
    "wordpress",
    "theme",
    "saas",
    "grant-management"
  ],
  "author": "Smart Grant Solutions",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.53.5",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.69.0",
    "vite": "^7.3.0",
    "vite-plugin-live-reload": "^3.0.5"
  },
  "dependencies": {
    "gsap": "^3.14.2",
    "ogl": "^1.0.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0"
  }
}
